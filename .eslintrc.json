{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react-hooks/recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "google",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "ignorePatterns": ["node_modules/**/*"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "require-jsdoc": "off",
        "react/prop-types": 0,
        "react-hooks/exhaustive-deps": "off",
        "import/no-unresolved": "off",
        "import/newline-after-import": ["error", { "count": 1 }],
        "import/order": ["error", {"groups": ["type","object","builtin", "external","internal","parent","sibling","index"]}]
    }
}
